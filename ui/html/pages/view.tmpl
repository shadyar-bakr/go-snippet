{{define "title"}}Snippet View{{ end }}

{{define "main"}}
{{ with.Snippet }}
<div class="snippet">
  <div class="metadata">
    <strong>{{.Title}}</strong>
    <span>#{{.ID}}</span>
  </div>
  <pre><code>{{.Content}}</code></pre>
  <div class="metadata">
    <time>Created: {{.CreatedAt | humanDate}}</time>
    <time>Expires: {{.Expires | humanDate}}</time>
  </div>
</div>
{{ end }}
{{ end }}
